@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{

        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Профиль"> @UserManager.GetUserName(User)</a>
            </li>
            <li>
                <form class="navbar-right" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                    <button type="submit" class="btn btn-link navbar-btn navbar-link">Выход</button>
                </form>
            </li>

        </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="Identity" asp-page="/Account/Register">Регистрация</a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login">Вход</a></li>
    </ul>
}